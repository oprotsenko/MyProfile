<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyProfile" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_text</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/blue</item>
        <item name="android:textColorSecondary">@color/gray_4</item>
        <item name="errorTextColor">@color/design_default_color_error</item>
        <item name="colorButtonNormal">@color/orange</item>
        <item name="android:textColorHint">@color/gray_4</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:attr/colorPrimary</item>
        <item name="android:navigationBarColor">?android:attr/statusBarColor</item>

        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/TextStyle</item>
        <item name="buttonStyle">@style/FullWidthButton</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="floatingActionButtonStyle">@style/FloatingButtonStyle</item>
    </style>
</resources>