<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Text" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Text.LightGray">
        <item name="android:textColor">@color/light_gray_text</item>
    </style>

    <style name="Text.Blue">
        <item name="android:textColor">@color/main_blue_color</item>
        <item name="android:layout_marginBottom">@dimen/sides_margin</item>
    </style>

    <style name="MainButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/orange_button</item>
        <item name="colorButtonNormal">@color/orange</item>
        <item name="colorControlHighlight">@color/main_blue_color</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:paddingTop">@dimen/button_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/button_top_bottom_padding</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:layout_marginStart">@dimen/sides_margin</item>
        <item name="android:layout_marginEnd">@dimen/sides_margin</item>
    </style>

    <style name="BorderlessButton" parent="TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/main_blue_color</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainButton.EditProfile">
        <item name="android:background">@drawable/white_button</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/main_blue_color</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="MainButton.Blue">
        <item name="android:background">@drawable/blue_button</item>
        <item name="colorButtonNormal">@color/main_blue_color</item>
        <item name="colorControlHighlight">@color/main_blue_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextField" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/gray_line</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">-4dp</item>
        <item name="android:layout_marginEnd">-8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="InnerLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/sides_margin</item>
        <item name="android:layout_marginEnd">@dimen/sides_margin</item>
    </style>
</resources>