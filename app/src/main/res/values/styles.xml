<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Style for white text-->
    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!--Style for light-gray text-->
    <style name="Text.LightGray">
        <item name="android:textColor">@color/light_gray_text</item>
    </style>
    <!--Style for blue text-->
    <style name="Text.Blue">
        <item name="android:textColor">@color/main_blue_color</item>
        <item name="android:layout_marginBottom">@dimen/sides_margin</item>
    </style>
    <!--Style for button-->
    <style name="MainButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
    </style>
    <!--Style for orange button-->
    <style name="MainButton.Orange">
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:textColor">@drawable/orange_button_text_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:paddingTop">@dimen/button_top_bottom_padding</item>
        <item name="android:paddingBottom">@dimen/button_top_bottom_padding</item>
    </style>
    <!--Style for white button-->
    <style name="MainButton.EditProfile">
        <item name="android:background">@drawable/white_button</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingTop">@dimen/between_text_margin</item>
        <item name="android:paddingBottom">@dimen/between_text_margin</item>
    </style>
    <!--Style for blue button-->
    <style name="MainButton.Blue">
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--Style for borderless button-->
    <style name="BorderlessButton" parent="TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/main_blue_color</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/between_elements_margin</item>
        <item name="android:textColorHint">@color/gray_line</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="boxStrokeColor">@color/light_gray_text</item>
        <item name="boxStrokeErrorColor">@color/light_gray_text</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="errorTextColor">@color/error_color</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:ems">10</item>
    </style>

    <style name="EditTextField" parent="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/main_blue_color</item>
        <item name="android:paddingStart">@dimen/zero</item>
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="InnerLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/sides_margin</item>
        <item name="android:layout_marginEnd">@dimen/sides_margin</item>
    </style>

</resources>