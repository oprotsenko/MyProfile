<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightGrayText" parent="TextStyle">
        <item name="android:textColor">?android:attr/textColorHint</item>
    </style>

    <style name="GrayText" parent="TextStyle">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="BlueText" parent="TextStyle">
        <item name="android:textColor">?android:attr/colorPrimary</item>
    </style>

    <style name="ParentLayoutMarginStyle">
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:padding">@dimen/margin_16</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCollapsedPaddingTop">@dimen/zero</item>
        <item name="expandedHintEnabled">false</item>
        <item name="hintTextColor">?android:attr/textColorHint</item>
        <item name="placeholderTextColor">?android:attr/textColorHint</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="boxStrokeColor">?android:attr/textColorHint</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="android:ems">10</item>
        <item name="boxStrokeErrorColor">?android:attr/textColorHint</item>
        <item name="errorTextColor">?attr/errorTextColor</item>
        <item name="android:padding">@dimen/zero</item>
    </style>

    <style name="EditTextFieldStyle" parent="TextStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">@dimen/zero</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:gravity">start</item>
        <item name="boxCollapsedPaddingTop">-16dp</item>
    </style>

    <!-- Button styles -->
    <style name="BorderOrangeButtonStyle">
        <item name="android:background">@drawable/auth_frame_orange</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:layout_marginBottom">@dimen/margin_12</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="OrangeButtonStyle">
        <item name="android:background">@drawable/all_orange_button</item>
        <item name="android:textColor">@drawable/all_orange_button_text_color</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:paddingTop">@dimen/padding_15.5</item>
        <item name="android:paddingBottom">@dimen/padding_15.5</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
    </style>

    <!--    Auth activity   -->
    <style name="TitleStyle">
        <item name="android:textSize">@dimen/text_size_h1</item>
    </style>

    <style name="DescriptionStyle">
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:layout_marginTop">@dimen/margin_4</item>
        <item name="android:layout_marginBottom">@dimen/margin_24</item>
    </style>

    <style name="EditTextFieldStyle.Auth">
        <item name="android:textCursorDrawable">@drawable/all_cursor_white</item>
    </style>

    <style name="AuthCheckBoxStyle" parent="LightGrayText">
        <item name="checkedTextViewStyle">@style/TextStyle</item>
        <item name="android:layout_marginTop">@dimen/margin_18</item>
        <item name="android:layout_marginStart">-6dp</item>
        <item name="android:buttonTint">?android:attr/textColorPrimary</item>
        <item name="android:minHeight">@dimen/zero</item>
    </style>

    <style name="CustomButtonStyle" parent="FullWidthButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@null</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:background">@drawable/auth_white_button</item>
        <item name="android:padding">@dimen/margin_12</item>
        <item name="android:letterSpacing">0.3</item>
        <item name="spaceBetween">@dimen/margin_16</item>
    </style>

    <style name="AuthOr">
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:text">@string/auth_or</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="AuthTermsAndConditions">
        <item name="android:text">@string/auth_terms_and_conditions</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:layout_marginBottom">@dimen/margin_12</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="LightGrayText.HaveAccount">
        <item name="android:layout_marginEnd">@dimen/margin_12</item>
<!--        <item name="android:text">@string/auth_already_have_account</item>-->
<!--        <item name="android:textSize">@dimen/text_size_h3</item>-->
    </style>

    <style name="SignIn_SignUp">
        <item name="android:layout_marginTop">@dimen/margin_12</item>
<!--        <item name="android:text">@string/auth_sign_in</item>-->
<!--        <item name="android:textSize">@dimen/text_size_h3</item>-->
    </style>

    <!--    Contacts list activity   -->
    <style name="ContactsListOptionsLayoutMarginStyle">
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:paddingStart">@dimen/margin_20</item>
        <item name="android:paddingTop">@dimen/margin_16</item>
        <item name="android:paddingEnd">@dimen/margin_20</item>
        <item name="android:paddingBottom">@dimen/margin_26</item>
    </style>

    <style name="ImageButtonBackStyle">
        <item name="srcCompat">@drawable/ic_arrow_back_24px</item>
    </style>

    <style name="ImageButtonSearchStyle">
        <item name="srcCompat">@drawable/ic_search</item>
    </style>

    <style name="ContactsTitleStyle">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="android:text">@string/contacts_list_contacts</item>
    </style>

    <style name="AddContactButtonStyle">
        <item name="android:layout_marginTop">@dimen/margin_32</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:text">@string/contacts_list_add_contacts</item>
    </style>

    <style name="FloatingButtonUp">
        <item name="android:layout_margin">@dimen/margin_16</item>
        <item name="srcCompat">@drawable/ic_up_arrow</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingEnd">@dimen/margin_16</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
    </style>

    <!--    Main activity   -->
    <style name="LayoutMainUserInfoStyle">
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:padding">@dimen/margin_16</item>
    </style>

    <style name="MainSettingsStyle">
        <item name="android:text">@string/main_settings</item>
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="UserPhotoStyle">
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="roundAsCircle">true</item>
        <item name="placeholderImage">?android:attr/textColorHint</item>
        <item name="failureImage">@drawable/ic_default_profile_photo</item>
    </style>

    <style name="UserNameStyle">
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:text">@string/all_username</item>
    </style>

    <style name="LightGrayText.CareerStyle">
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:text">@string/all_career</item>
    </style>

    <style name="LightGrayText.HomeAddressStyle">
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:text">@string/all_home_address</item>
    </style>

    <style name="MainSocialButtonStyle" parent="ImageButtonStyle">
        <item name="layout_constraintDimensionRatio">h,1:1</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
    </style>

    <style name="MainSocialButtonStyle.Facebook">
        <item name="android:background">@drawable/ic_facebook</item>
    </style>

    <style name="MainSocialButtonStyle.LinkedIn">
        <item name="android:background">@drawable/ic_linkedin</item>
    </style>

    <style name="MainSocialButtonStyle.VK">
        <item name="android:background">@drawable/ic_vk</item>
    </style>

    <style name="BlueText.SettingsDescriptionStyle">
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:text">@string/main_settings_description</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <style name="EditProfile">
        <item name="android:background">@drawable/main_frame_gray</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_12</item>
        <item name="android:text">@string/main_edit_profile</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--    Add contact dialog-fragment   -->
    <style name="AddContactHeaderLayoutStyle">
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:paddingStart">@dimen/margin_20</item>
        <item name="android:paddingTop">@dimen/margin_24</item>
        <item name="android:paddingBottom">@dimen/margin_28</item>
    </style>

    <style name="AddContactTitleStyle">
        <item name="android:text">@string/add_contacts_fragment_add_contact</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="ImageButtonAddPhotoStyle">
        <item name="android:background">@drawable/all_round_orange_button_background</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:padding">@dimen/margin_14</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="srcCompat">@drawable/ic_add_photo</item>
    </style>

    <style name="TextInputLayoutStyle.FragmentMargin">
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
    </style>

    <style name="EditTextFieldStyle.DarkText">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textCursorDrawable">@drawable/all_cursor_gray</item>
    </style>

    <style name="OrangeButtonStyle.Save">
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:text">@string/add_contacts_fragment_button_save</item>
    </style>

    <!--    Contact list item   -->
    <style name="ContactListItemLayoutStyle">
        <item name="android:background">@drawable/contacts_frame_light_gray</item>
        <item name="android:padding">@dimen/margin_8</item>
        <item name="android:paddingEnd">@dimen/margin_12</item>
    </style>

    <!--    Contact detail view   -->
    <style name="ContactDetailViewLayoutStyle">
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:padding">@dimen/margin_20</item>
    </style>

    <style name="Profile">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:text">@string/contact_detail_view_profile</item>
    </style>
</resources>