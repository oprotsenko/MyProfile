<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyProfile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">#616161</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

        <item name="colorOnError">@color/error_color</item>
        <item name="android:textColorHint">@color/gray_4</item>
        <item name="android:windowBackground">?attr/colorOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="color">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">#616161</item>
        <item name="colorOnSecondary">@color/gray_text2</item>
        <item name="android:textColorSecondary">@color/gray_text</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray_4</item>

        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?android:attr/statusBarColor</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationsStyle</item>
        <item name="android:textViewStyle">@style/TextStyle</item>
        <item name="buttonStyle">@style/FullWidthButton</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="floatingActionButtonStyle">@style/FloatingButtonStyle</item>
<!--        <item name="textInputStyle">@style/TextInputLayoutStyle</item>-->
<!--        <item name="editTextStyle">@style/EditTextField</item>-->
    </style>

    <!-- All app styles -->
    <style name="WindowAnimationsStyle">
        <item name="android:activityOpenEnterAnimation">@anim/enter_activity</item>
        <item name="android:activityOpenExitAnimation">@anim/exit_activity</item>
        <item name="android:activityCloseEnterAnimation">@anim/enter_activity</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_activity</item>
    </style>

    <style name="TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">?android:attr/fontFamily</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearanceStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">?android:attr/fontFamily</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:letterSpacing">0.5</item>
        <!--        <item name="android:textColor">@color/gray_text</item>-->
    </style>

    <style name="FullWidthButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">?android:attr/fontFamily</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FloatingButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="tint">@color/white</item>
    </style>
</resources>