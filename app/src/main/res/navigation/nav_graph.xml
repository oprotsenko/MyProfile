<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/viewPagerFragmentNav">

    <fragment
        android:id="@+id/viewPagerFragmentNav"
        android:name="com.protsolo.ui.main.authorization.viewPager.ViewPagerFragment"
        android:label="ViewPagerFragment"
        tools:layout="@layout/fragment_authorization">
        <action
            android:id="@+id/action_viewPagerFragmentNav_to_profileFragmentNav"
            app:destination="@id/profileFragmentNav"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/profileFragmentNav"
        android:name="com.protsolo.ui.main.authorization.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragmentNav_to_contactsFragmentNav"
            app:destination="@id/contactsFragmentNav"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/contactsFragmentNav"
        android:name="com.protsolo.ui.main.authorization.profile.contacts.ContactsFragment"
        android:label="ContactsFragment"
        tools:layout="@layout/fragment_contacts">
        <action
            android:id="@+id/action_ContactsFragmentNav_to_contactDetailViewFragmentNav"
            app:destination="@id/contactDetailViewFragmentNav"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_contactsFragmentNav_to_addContactDialogFragmentNav"
            app:destination="@id/addContactDialogFragmentNav"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/addContactDialogFragmentNav"
        android:name="com.protsolo.ui.main.authorization.profile.contacts.dialog.AddContactDialogFragment"
        android:label="AddContactDialogFragment"
        tools:layout="@layout/dialog_fragment_add_contact"/>

    <fragment
        android:id="@+id/contactDetailViewFragmentNav"
        android:name="com.protsolo.ui.main.authorization.profile.contacts.details.ContactDetailViewFragment"
        android:label="ContactDetailViewFragment"
        tools:layout="@layout/fragment_profile" >
        <argument
            android:name="userDetails"
            app:argType="com.protsolo.app.item.UserModel" />
    </fragment>

    <activity
        android:id="@+id/mainActivityNav"
        android:name="com.protsolo.ui.main.MainActivity"
        android:label="MainActivity"
        tools:layout="@layout/fragment_authorization"/>

</navigation>