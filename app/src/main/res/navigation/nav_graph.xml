<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authorizationFragmentNav">

    <fragment
        android:id="@+id/viewPagerFragmentNav"
        android:name="com.protsolo.ui.main.authorization.viewPager.ViewPagerFragment"
        android:label="ViewPagerFragment"
        tools:layout="@layout/fragment_authorization">
        <action
            android:id="@+id/action_viewPagerFragment_to_profileFragment"
            app:destination="@id/profileFragmentNav" />
    </fragment>

    <fragment
        android:id="@+id/authorizationFragmentNav"
        android:name="com.protsolo.ui.main.authorization.AuthorizationFragment"
        android:label="AuthorizationFragment"
        tools:layout="@layout/fragment_authorization">
        <action
            android:id="@+id/action_authorizationFragment_to_profileFragment"
            app:destination="@id/profileFragmentNav" />
        <action
            android:id="@+id/action_authorizationFragmentNav_self"
            app:destination="@id/authorizationFragmentNav" >
        </action>
        <argument
            android:name="emailField"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="" />
        <argument
            android:name="passField"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="" />
    </fragment>

    <fragment
        android:id="@+id/profileFragmentNav"
        android:name="com.protsolo.ui.main.authorization.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_contactsFragment"
            app:destination="@id/contactsFragmentNav" />
        <argument
            android:name="email"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/contactsFragmentNav"
        android:name="com.protsolo.ui.main.authorization.profile.contacts.ContactsFragment"
        android:label="ContactsFragment"
        tools:layout="@layout/fragment_contacts">
        <action
            android:id="@+id/action_ContactsFragment_to_contactDetailViewFragment"
            app:destination="@id/contactDetailViewFragmentNav" />
        <action
            android:id="@+id/action_contactsFragment_to_addContactDialogFragment"
            app:destination="@id/addContactDialogFragmentNav" />
    </fragment>

    <fragment
        android:id="@+id/addContactDialogFragmentNav"
        android:name="com.protsolo.ui.main.authorization.profile.contacts.dialog.AddContactDialogFragment"
        android:label="AddContactDialogFragment"
        tools:layout="@layout/dialog_fragment_add_contact"/>

    <fragment
        android:id="@+id/contactDetailViewFragmentNav"
        android:name="com.protsolo.ui.main.authorization.profile.contacts.details.ContactDetailViewFragment"
        android:label="ContactDetailViewFragment"
        tools:layout="@layout/fragment_profile" >
        <argument
            android:name="userDetails"
            app:argType="com.protsolo.itemModel.UserModel"
            app:nullable="true" />
    </fragment>

    <activity
        android:id="@+id/mainActivityNav"
        android:name="com.protsolo.ui.main.MainActivity"
        android:label="MainActivity"
        tools:layout="@layout/fragment_authorization"/>

</navigation>