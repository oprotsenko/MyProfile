<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/viewPagerFragmentNav">

    <activity
        android:id="@+id/mainActivityNav"
        android:name="com.protsolo.presentation.main.MainActivity"
        android:label="MainActivity"
        tools:layout="@layout/fragment_authorization"/>

    <fragment
        android:id="@+id/viewPagerFragmentNav"
        android:name="com.protsolo.presentation.main.viewPagerAuthorization.ViewPagerAuthorizationFragment"
        android:label="ViewPagerFragment"
        tools:layout="@layout/fragment_authorization">
        <action
            android:id="@+id/action_viewPagerFragmentNav_to_profileFragmentNav"
            app:destination="@id/profileFragmentNav"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_viewPagerFragmentNav_to_signUpExtFragment"
            app:destination="@id/signUpExtFragmentNav"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/profileFragmentNav"
        android:name="com.protsolo.presentation.main.viewPagerAuthorization.authorization.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragmentNav_to_viewPagerContactsFragmentNav"
            app:destination="@id/viewPagerContactsFragmentNav"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_profileFragmentNav_to_editProfileFragmentNav"
            app:destination="@id/editProfileFragmentNav"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/editProfileFragmentNav"
        android:name="com.protsolo.presentation.main.viewPagerAuthorization.authorization.profile.edit.EditProfileFragment"
        android:label="AddContactDialogFragment"
        tools:layout="@layout/fragment_edit_profile"/>

    <fragment
        android:id="@+id/contactDetailViewFragmentNav"
        android:name="com.protsolo.presentation.main.viewPagerAuthorization.authorization.profile.viewPagerContacts.contacts.details.ContactDetailViewFragment"
        android:label="ContactDetailViewFragment"
        tools:layout="@layout/fragment_profile" >
        <argument
            android:name="userDetails"
            app:argType="com.protsolo.app.item.UserModel" />
    </fragment>

    <fragment
        android:id="@+id/signUpExtFragmentNav"
        android:name="com.protsolo.presentation.main.viewPagerAuthorization.authorization.signUp.SignUpExtFragment"
        android:label="SignUpExtFragment"
        tools:layout="@layout/fragment_sign_up_ext">
        <argument
            android:name="email"
            app:argType="string" />
        <argument
            android:name="pass"
            app:argType="string" />
        <action
            android:id="@+id/action_signUpExtFragmentNav_to_profileFragmentNav"
            app:destination="@id/profileFragmentNav"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/viewPagerContactsFragmentNav"
        android:name="com.protsolo.presentation.main.viewPagerAuthorization.authorization.profile.viewPagerContacts.ViewPagerContactsFragment"
        android:label="ViewPagerContactsFragment"
        tools:layout="@layout/fragment_contacts">
        <action
            android:id="@+id/action_viewPagerContactsFragmentNav_to_contactDetailViewFragmentNav"
            app:destination="@id/contactDetailViewFragmentNav"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

</navigation>