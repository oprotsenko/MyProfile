<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ParentLayout.White.Main"
    tools:context=".ui.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutMainUserInfo"
        style="@style/ChildrenLayout.MainUserInfo"
        app:layout_constraintBottom_toTopOf="@id/guideLineMainHorizontalCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buttonMainSettings"
            style="@style/Text.MainSettings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageViewMainProfilePhoto"
            style="@style/ProfilePhotoSize.MainUserPhoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonMainSettings"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewMainUserName"
            style="@style/Text.MainUserName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewMainProfilePhoto" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewMainCareer"
            style="@style/Text.LightGray.MainCareer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewMainUserName" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewMainHomeAddress"
            style="@style/Text.LightGray.MainHomeAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewMainCareer" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineMainHorizontalCenter"
        style="@style/GuideLine.Horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonMainSocialFacebook"
        style="@style/ImageButton.MainSocial.Facebook"
        app:layout_constraintBottom_toTopOf="@id/textViewMainSettingsDescription"
        app:layout_constraintEnd_toStartOf="@id/buttonMainSocialLinkedIn"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideLineMainHorizontalCenter" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonMainSocialLinkedIn"
        style="@style/ImageButton.MainSocial.LinkedIn"
        app:layout_constraintBottom_toTopOf="@id/textViewMainSettingsDescription"
        app:layout_constraintEnd_toStartOf="@id/buttonMainSocialVK"
        app:layout_constraintStart_toEndOf="@id/buttonMainSocialFacebook"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutMainUserInfo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonMainSocialVK"
        style="@style/ImageButton.MainSocial.VK"
        app:layout_constraintBottom_toTopOf="@id/textViewMainSettingsDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonMainSocialLinkedIn"
        app:layout_constraintTop_toTopOf="@+id/guideLineMainHorizontalCenter" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewMainSettingsDescription"
        style="@style/Text.Blue.SettingsDescription"
        app:layout_constraintBottom_toTopOf="@id/buttonMainEditProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonMainEditProfile"
        style="@style/FullWidthButton.EditProfile"
        app:layout_constraintBottom_toTopOf="@id/buttonMainViewContacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonMainViewContacts"
        style="@style/FullWidthButton.Orange.MyContacts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>