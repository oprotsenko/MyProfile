<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_blue_color"
    app:layoutDescription="@xml/activity_auth_scene"
    tools:context=".ui.AuthActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineAuthHorizontal0.23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.23" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAuthTitle"
        style="@style/Text"
        android:text="@string/auth_acquaint"
        android:textSize="@dimen/text_size_h1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideLineAuthHorizontal0.23" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAuthFillOutDescription"
        style="@style/Text"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="@dimen/margin_24"
        android:text="@string/auth_fill_out_description"
        android:textSize="@dimen/text_size_h4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAuthTitle" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutAuthEmail"
        style="@style/TextInputLayout.Auth"
        android:hint="@string/auth_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAuthFillOutDescription">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextAuthEmailAddressField"
            style="@style/EditTextField"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutAuthPassword"
        style="@style/TextInputLayout"
        android:hint="@string/auth_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutAuthEmail">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextAuthPasswordField"
            style="@style/EditTextField"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkBoxAuthRememberMe"
        style="@style/Text.LightGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_18"
        android:buttonTint="@color/white"
        android:minHeight="@dimen/zero"
        android:text="@string/auth_remember_me"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInputLayoutAuthPassword" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutAuthGoogleSignInButton"
        style="@style/MainButton.White"
        app:layout_constraintBottom_toTopOf="@+id/textViewAuthOr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_google"
            android:layout_marginEnd="@dimen/margin_16"/>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Text"
            android:textColor="@color/gray_text"
            android:textAllCaps="true"
            android:letterSpacing="0.3"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auth_google_sign_in"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAuthOr"
        style="@style/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auth_or"
        android:textSize="@dimen/text_size_h2"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        app:layout_constraintBottom_toTopOf="@+id/buttonAuthRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAuthRegister"
        style="@style/MainButton.BorderOrange"
        android:layout_marginTop="147dp"
        android:layout_marginBottom="@dimen/margin_12"
        android:enabled="false"
        android:text="@string/auth_register"
        app:layout_constraintBottom_toTopOf="@id/textViewAuthTermsAndConditions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAuthTermsAndConditions"
        style="@style/Text"
        android:layout_marginBottom="@dimen/margin_12"
        android:text="@string/auth_terms_and_conditions"
        android:textFontWeight="400"
        android:textSize="@dimen/text_size_h4"
        app:layout_constraintBottom_toTopOf="@id/textViewAuthHaveAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAuthHaveAccount"
        style="@style/Text.LightGray"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_marginBottom="@dimen/margin_16"
        android:text="@string/auth_already_have_account"
        android:textSize="@dimen/text_size_h3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textViewAuthSignIn"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAuthSignIn"
        style="@style/Text"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="@dimen/margin_16"
        android:text="@string/auth_sign_in"
        android:textSize="@dimen/text_size_h3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewAuthHaveAccount"
        app:layout_constraintTop_toBottomOf="@id/textViewAuthTermsAndConditions" />

</androidx.constraintlayout.widget.ConstraintLayout>